extends ../includes/layout

block content
  #main.container
    .row

      include ../includes/nav-menu
      include ../includes/breadcrumbs.jade

      .row
        .span10
          #description-area
            |Daemon Management
          #record-area.well
            h3 Add single host
            .input-append
              input#newDaemon.input-large(type="text", placeholder='Daemon IP address', autofocus='autofocus')
              button#addDaemon.btn.btn-primary Add Daemon
            
            h3 Upload list of hosts
            form#hostManagementForm
              input#file.hide.ie_show(type='file', name="file")
              .input-append.ie_hide
                input#pretty-input.input-large(type='text', onclick="$('#file').click();")
                a.btn(onclick="$('#file').click();") Browse
              button#uploadHosts.btn.btn-primary Upload file
            
            h3 Hosts list

            section#main
              ul#daemonsList.nav.nav-tabs.nav-stacked
      #pagination.pagination.pagination-right
  
  

  include templates/item-template
